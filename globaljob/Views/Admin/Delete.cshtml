@model globaljob.Models.ApplicationUser

@{
    ViewData["Title"] = "Delete";
}
<style>
.row{color:white;}

</style>
<div class="row justify-content-md-center">
    <div class="col-md-auto">
        <h3 style="font-family:'Times New Roman', Times, serif">Delete</h3>
    </div>
</div>

<div class="row justify-content-md-center">
    <div class="col-md-auto">
        <h3><span style="font-family:'Times New Roman', Times, serif">Are you sure you want to delete this ?</span> </h3>
    </div>
</div>

<div class="row justify-content-md-center">
    <div class="col-md-auto">
        <h4 style="font-family:'Times New Roman', Times, serif">Détails du Compte</h4>
        <hr />
    </div>
</div>


<div class="row justify-content-md-center">
    <div class="col-md-auto">
        <p style="font-size: 23px;"><span style="font-family:Bold Art;">User Name</span>: <span style="font-family:'Times New Roman', Times, serif"> @Model.UserName</span></p>
    </div>
</div>
<div class="row justify-content-md-center">
    <div class="col-md-auto">
        <p style="font-size: 23px;"><span style="font-family:Bold Art;">First Name</span>: <span style="font-family:'Times New Roman', Times, serif"> @Model.FirstName </span></p>
    </div>
</div>
<div class="row justify-content-md-center">
    <div class="col-md-auto">
        <p style="font-size: 23px;"><span style="font-family:Bold Art;">Last Name</span>: <span style="font-family:'Times New Roman', Times, serif"> @Model.LastName </span></p>
    </div>
</div>
<div class="row justify-content-md-center">
    <div class="col-md-auto">
        <p style="font-size: 23px;"><span style="font-family:Bold Art;">Address</span>: <span style="font-family:'Times New Roman', Times, serif"> @Model.Address </span></p>
    </div>
</div>
<div class="row justify-content-md-center">
    <div class="col-md-auto">
        <p style="font-size: 23px;"><span style="font-family:Bold Art;">Governate</span>: <span style="font-family:'Times New Roman', Times, serif"> @Model.Governate </span> </p>
    </div>
</div>

<div class="row justify-content-md-center">
    <div class="col-md-auto">
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-warning">Cancel</a>
        </form>
    </div>
</div>