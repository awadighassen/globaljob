@model globaljob.Models.Offre

@{
    ViewData["Title"] = "Edit";
}
<style>
.row{color:white;}
h1{color:white;}
h4{color:white;}
a{color:white;}
a:hover{color:white;}
</style>
<h1>Edit</h1>

<h4>Offre</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
